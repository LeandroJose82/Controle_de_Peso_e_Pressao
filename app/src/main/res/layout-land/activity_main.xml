<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">


    <com.google.android.material.slider.Slider
        android:id="@+id/sliderPeso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:stepSize="0.05"
        android:valueTo="200"
        app:layout_constraintBottom_toTopOf="@id/guiaCentral"
        app:layout_constraintEnd_toEndOf="@+id/guiaDireita"
        app:layout_constraintStart_toStartOf="@+id/guiaEsquerda"
        app:layout_constraintTop_toBottomOf="@id/pesoTelaPrincipal"
        app:trackHeight="5dp" />

    <Button
        android:id="@+id/salvarNovoPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:text="@string/salvar"
        app:layout_constraintStart_toEndOf="@id/pesoTelaPrincipal"
        app:layout_constraintTop_toTopOf="@id/guiaSuperior" />

    <TextView
        android:id="@+id/tituloPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/peso"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/guiaEsquerda"
        app:layout_constraintTop_toTopOf="@id/guiaSuperior"

        />

    <TextView
        android:id="@+id/pesoTelaPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/exemplo_peso"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/tituloPeso"
        app:layout_constraintTop_toTopOf="@id/guiaSuperior" />

    <TextView
        android:id="@+id/tituloPressaoTelaPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pressao"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/guiaEsquerda"
        app:layout_constraintTop_toBottomOf="@id/guiaCentral"
        app:layout_constraintVertical_chainStyle="packed" />


    <TextView
        android:id="@+id/pressaoTelaPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exemplo_pressao"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/tituloPressaoTelaPrincipal"
        app:layout_constraintTop_toBottomOf="@id/guiaCentral"
        tools:layout_editor_absoluteY="201dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiaCentral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.61"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiaSuperior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@id/guiaDireita"
        app:layout_constraintGuide_begin="57dp"
        app:layout_constraintStart_toEndOf="@id/guiaEsquerda"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiaEsquerda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"
        app:layout_constraintTop_toBottomOf="@id/guiaSuperior" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiaDireita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/guiaInferior"
        app:layout_constraintGuide_end="16dp"
        app:layout_constraintTop_toTopOf="@id/guiaSuperior" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiaInferior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_end="16dp" />

    <NumberPicker
        android:id="@+id/pickerPressaoSistolica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        app:layout_constraintStart_toEndOf="@+id/btnSalvarPressao"
        app:layout_constraintTop_toBottomOf="@id/guiaCentral" />

    <NumberPicker
        android:id="@+id/pickerPressaoDiastolica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="116dp"
        app:layout_constraintStart_toEndOf="@id/pickerPressaoSistolica"
        app:layout_constraintTop_toBottomOf="@id/guiaCentral" />

    <Button
        android:id="@+id/btnSalvarPressao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/salvar"
        app:layout_constraintEnd_toEndOf="@+id/salvarNovoPeso"
        app:layout_constraintStart_toEndOf="@id/pressaoTelaPrincipal"
        app:layout_constraintStart_toStartOf="@+id/salvarNovoPeso"
        app:layout_constraintTop_toBottomOf="@id/guiaCentral" />

</androidx.constraintlayout.widget.ConstraintLayout>