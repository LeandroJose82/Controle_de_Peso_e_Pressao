<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo"
    tools:context=".activities.MainActivity">


    <com.google.android.material.slider.Slider
        android:id="@+id/sliderPeso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stepSize="0.05"
        android:valueTo="200"
        app:trackHeight="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/salvarNovoPeso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <Button
        android:id="@+id/salvarNovoPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/salvar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tituloPeso"
        app:layout_constraintHorizontal_bias="0.5"

        app:layout_constraintTop_toBottomOf="@id/sliderPeso" />

    <TextView
        android:id="@+id/tituloPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/peso"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/pesoTelaPrincipal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/salvarNovoPeso"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/pesoTelaPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exemplo_peso"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tituloPeso"
        app:layout_constraintBottom_toTopOf="@id/guiaCentral"
       />

    <TextView
        android:id="@+id/tituloPressaoTelaPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/pressao"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/pressaoTelaPrincipal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guiaCentral"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/pressaoTelaPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exemplo_pressao"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloPressaoTelaPrincipal" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiaCentral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnNovaPressao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/novo"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_estatisticasPressao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/estatisticas"
        tools:ignore="DuplicateSpeakableTextCheck,MissingConstraints" />

    <Button
        android:id="@+id/btn_registrosPressao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registros"
        tools:ignore="DuplicateSpeakableTextCheck" />


    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flowPressaoTelaPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="btnNovaPressao ,btn_estatisticasPressao ,btn_registrosPressao"
        app:flow_horizontalGap="16dp"
        app:flow_wrapMode="aligned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pressaoTelaPrincipal" />


</androidx.constraintlayout.widget.ConstraintLayout>